# ==============================================
# Gram√°tica Lexicalizada: asocia cada categor√≠a a una palabra n√∫cleo
# ==============================================

import random

# Definimos una gram√°tica con ‚Äúpalabras cabeza‚Äù (head words)
gramatica = {
    "S": [("NP VP", 1.0)],
    "NP": [("Det N(perro)", 0.5), ("Det N(gato)", 0.5)],
    "VP": [("V(corre) NP", 0.5), ("V(duerme)", 0.5)]
}

def expandir(simbolo):
    if "(" in simbolo:
        # Si tiene una palabra (n√∫cleo)
        return simbolo.split("(")[1].split(")")[0]
    if simbolo not in gramatica:
        return simbolo
    reglas, probs = zip(*gramatica[simbolo])
    regla = random.choices(reglas, probs)[0]
    return " ".join(expandir(s) for s in regla.split())

print("üí¨ Oraci√≥n lexicalizada:", expandir("S"))