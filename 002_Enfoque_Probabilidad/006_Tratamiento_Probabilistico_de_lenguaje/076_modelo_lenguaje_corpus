
from collections import defaultdict
import random

# Corpus simple (puedes usar uno m√°s grande si quieres)
corpus = [
    "el perro corre rapido",
    "el gato duerme tranquilo",
    "el perro ladra fuerte",
    "el gato maulla suave"
]

# Paso 1Ô∏è‚É£: Tokenizar oraciones en palabras
tokens = []
for frase in corpus:
    tokens.extend(frase.split())

# Paso 2Ô∏è‚É£: Calcular frecuencia de unigramas
freq = defaultdict(int)
for palabra in tokens:
    freq[palabra] += 1

# Paso 3Ô∏è‚É£: Calcular probabilidad de cada palabra
total = len(tokens)
prob = {palabra: freq[palabra]/total for palabra in freq}

print("üîπ Frecuencias:", freq)
print("üîπ Probabilidades:", prob)

# Paso 4Ô∏è‚É£: Generar oraci√≥n aleatoria usando probabilidades
def generar_oracion(n=5):
    palabras = list(prob.keys())
    probs = list(prob.values())
    return " ".join(random.choices(palabras, probs, k=n))

print("\nüó£Ô∏è Oraci√≥n generada:", generar_oracion(6))