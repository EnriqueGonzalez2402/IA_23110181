import heapq  # Para crear una cola de prioridad según heurística
# Grafo: nodos y sus vecinos
graph = {
    'A': ['B', 'C'],
    'B': ['D', 'E'],
    'C': ['F'],
    'D': [],
    'E': ['F'],
    'F': []
}


# Heurística: estimación de la distancia restante al objetivo F
heuristic = {
    'A': 6,
    'B': 4,
    'C': 2,
    'D': 7,
    'E': 1,
    'F': 0
}

start = 'A'
goal = 'F'


def greedy_best_first_search(graph, start, goal, heuristic):
    # Cola de prioridad: cada elemento es (valor heurístico, camino)
    queue = [(heuristic[start], [start])]
    visited = set()  # Nodos visitados para evitar ciclos

    while queue:
        # Sacamos el nodo con menor heurística
        _, path = heapq.heappop(queue)
        node = path[-1]

        # Si llegamos al objetivo, devolvemos el camino
        if node == goal:
            return path

        if node not in visited:
            visited.add(node)

            # Extendemos la búsqueda a todos los vecinos
            for neighbor in graph[node]:
                # Agregamos el vecino con su heurística
                heapq.heappush(queue, (heuristic[neighbor], path + [neighbor]))
    
    return None

path_greedy = greedy_best_first_search(graph, start, goal, heuristic)
print("9️⃣ Voraz:", path_greedy)