import math
import random

# Grafo: nodos y sus vecinos
graph = {
    'A': ['B', 'C'],
    'B': ['D', 'E'],
    'C': ['F'],
    'D': [],
    'E': ['F'],
    'F': []
}

# Heurística: estimación de la distancia restante al objetivo F
heuristic = {
    'A': 6,
    'B': 4,
    'C': 2,
    'D': 7,
    'E': 1,
    'F': 0
}

start = 'A'
goal = 'F'

def simulated_annealing(graph, start, goal, heuristic, T=10, alpha=0.9):
    current = start
    path = [current]

    while T > 0.1:
        neighbors = graph[current]
        if not neighbors:
            break

        next_node = random.choice(neighbors)
        delta = heuristic[current] - heuristic[next_node]

        # Aceptamos movimiento si mejora o con cierta probabilidad
        if delta > 0 or random.random() < math.exp(delta / T):
            current = next_node
            path.append(current)
            if current == goal:
                return path

        # Disminuimos la temperatura
        T *= alpha

    return path

path_sa = simulated_annealing(graph, start, goal, heuristic)
print("1️⃣3️⃣ Temple Simulado:", path_sa)