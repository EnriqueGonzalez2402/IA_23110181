import random

# Grafo: nodos y sus vecinos
graph = {
    'A': ['B', 'C'],
    'B': ['D', 'E'],
    'C': ['F'],
    'D': [],
    'E': ['F'],
    'F': []
}

# Heurística: estimación de la distancia restante al objetivo F
heuristic = {
    'A': 6,
    'B': 4,
    'C': 2,
    'D': 7,
    'E': 1,
    'F': 0
}

start = 'A'
goal = 'F'

def hill_climbing(graph, start, goal, heuristic):
    current = start
    path = [current]

    while current != goal:
        neighbors = graph[current]
        if not neighbors:
            break  # Sin vecinos, no hay a dónde ir

        # Escogemos el vecino con menor heurística (más prometedor)
        next_node = min(neighbors, key=lambda n: heuristic[n])

        # Si no hay mejora, estamos en un máximo local
        if heuristic[next_node] >= heuristic[current]:
            break

        current = next_node
        path.append(current)

    return path

path_hill = hill_climbing(graph, start, goal, heuristic)
print("1️⃣1️⃣ Hill Climbing:", path_hill)