# Grafo: nodos y sus vecinos
graph = {
    'A': ['B', 'C'],
    'B': ['D', 'E'],
    'C': ['F'],
    'D': [],
    'E': ['F'],
    'F': []
}

# Heurística: estimación de la distancia restante al objetivo F
heuristic = {
    'A': 6,
    'B': 4,
    'C': 2,
    'D': 7,
    'E': 1,
    'F': 0
}

start = 'A'
goal = 'F'

def tabu_search(graph, start, goal, heuristic, tabu_size=3):
    current = start
    path = [current]
    tabu_list = []  # Lista de nodos prohibidos temporalmente

    while current != goal:
        # Consideramos vecinos que no estén en la lista tabú
        neighbors = [n for n in graph[current] if n not in tabu_list]
        if not neighbors:
            break

        # Escogemos el vecino con mejor heurística
        next_node = min(neighbors, key=lambda n: heuristic[n])

        # Actualizamos la lista tabú (mantiene tamaño limitado)
        tabu_list.append(current)
        if len(tabu_list) > tabu_size:
            tabu_list.pop(0)

        current = next_node
        path.append(current)

    return path

path_tabu = tabu_search(graph, start, goal, heuristic)
print("1️⃣2️⃣ Tabú:", path_tabu)