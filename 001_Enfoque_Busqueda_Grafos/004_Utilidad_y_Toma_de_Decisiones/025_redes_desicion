# Ejemplo: decidir si llevar paraguas seg煤n probabilidad de lluvia.
prob_lluvia = 0.5
utilidad_con_paraguas = 8    # No te mojas, pero es algo inc贸modo
utilidad_sin_paraguas_lluvia = 0  # Te mojas :(
utilidad_sin_paraguas_sol = 10    # D铆a perfecto

# C谩lculo de utilidad esperada
UE_con_paraguas = utilidad_con_paraguas
UE_sin_paraguas = prob_lluvia * utilidad_sin_paraguas_lluvia + (1 - prob_lluvia) * utilidad_sin_paraguas_sol

print("25锔 Red de Decisi贸n:")
print(f"Utilidad Esperada (con paraguas): {UE_con_paraguas}")
print(f"Utilidad Esperada (sin paraguas): {UE_sin_paraguas}")

if UE_con_paraguas > UE_sin_paraguas:
    print(" Decisi贸n 贸ptima: Llevar paraguas 锔")
else:
    print(" Decisi贸n 贸ptima: No llevar paraguas ")