# Modelo donde el agente no conoce completamente el estado del entorno,
# solo tiene una creencia (probabilidad de estar en cada estado).

estados = ['Sano', 'Enfermo']
creencia = {'Sano': 0.7, 'Enfermo': 0.3}

# Recompensas esperadas por acci贸n
acciones = {'Descansar': {'Sano': 5, 'Enfermo': 1},
             'Trabajar': {'Sano': 10, 'Enfermo': -5}}

# Elegimos acci贸n con mayor utilidad esperada
def utilidad_esperada(creencia, accion):
    return sum(creencia[s] * acciones[accion][s] for s in estados)

mejor_accion = max(acciones, key=lambda a: utilidad_esperada(creencia, a))

print("30锔 POMDP:")
for a in acciones:
    print(f"Acci贸n {a}: Utilidad esperada = {utilidad_esperada(creencia, a):.2f}")
print(f" Mejor acci贸n: {mejor_accion}")