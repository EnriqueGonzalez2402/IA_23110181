
graph = {
    'A': ['B', 'C'],     # Desde A podemos ir a B y C
    'B': ['D', 'E'],     # Desde B podemos ir a D y E
    'C': ['F'],          # Desde C podemos ir a F
    'D': [],             # D no tiene vecinos
    'E': ['F'],          # Desde E podemos ir a F
    'F': []              # F no tiene vecinos
}

# Queremos ir del nodo 'A' al nodo 'F'
start = 'A'
goal = 'F'

def dfs_limited(graph, start, goal, limit):
    # Versión recursiva de DFS con límite de profundidad

    def dfs_recursive(node, path, depth):
        # Si superamos el límite, detenemos esta rama
        if depth > limit:
            return None

        # Si encontramos el objetivo, devolvemos el camino
        if node == goal:
            return path

        # Exploramos los vecinos si aún no llegamos al límite
        for neighbor in graph[node]:
            result = dfs_recursive(neighbor, path + [neighbor], depth + 1)
            if result:
                return result

        # Si ninguno funcionó, regresamos None
        return None

    # Iniciamos la búsqueda desde el nodo inicial
    return dfs_recursive(start, [start], 0)

print("4️⃣ DFS Limitada:", dfs_limited(graph, start, goal, limit=3))